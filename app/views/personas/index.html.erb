<h1>Listing Personas</h1>

<table>
  <thead>
    <tr>
      <th>Rut</th>
      <th>dv</th>
      <th>Nombre</th>
      <th>Apellido Paterno</th>
      <th>Apellido Materno</th>
      <th>Fecha Nacimiento</th>
      <th>Fecha de Ingreso</th>
      <th>Carho</th>
      <th>Estado</th>
      <th>Fecha de Creacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.perrut %></td>
        <td><%= persona.perdv %></td>
        <td><%= persona.pernombre %></td>
        <td><%= persona.perapellidopaterno %></td>
        <td><%= persona.perapellidomaterno %></td>
        <td><%= persona.perfechanacimiento %></td>
        <td><%= persona.perfechaingreso %></td>
        <td><%= persona.percargo %></td>
        <td><%= persona.perestado %></td>
        <td><%= persona.perfechacreacion %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

